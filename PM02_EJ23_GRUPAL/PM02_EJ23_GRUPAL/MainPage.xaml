<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02_EJ23_GRUPAL.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Grabar Audio" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Image Margin="50" Source="audioImage.png" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="100" WidthRequest="100">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="recordAudio_Clicked"/>
            </Image.GestureRecognizers>
        </Image>

        <Button Text="AudiosGrabados" Clicked="savedAudios_Clicked"/>
    </StackLayout>

</ContentPage>
